    <servlet>
        <servlet-name>StationScheduleController</servlet-name>
        <servlet-class>com.tsystems.javaschool.uberbahn.webmain.controllers.StationTimetableControllerImpl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StationScheduleController</servlet-name>
        <url-pattern>/stationTimetable</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>TrainScheduleController</servlet-name>
        <servlet-class>com.tsystems.javaschool.uberbahn.webmain.controllers.TrainTimetableControllerImpl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TrainScheduleController</servlet-name>
        <url-pattern>/trainTimetable</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>StationTimetableSearchController</servlet-name>
        <servlet-class>com.tsystems.javaschool.uberbahn.webmain.controllers.StationTimetableSearchControllerImpl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StationTimetableSearchController</servlet-name>
        <url-pattern>/stationTimetableSearch</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>TrainTimetableSearchController</servlet-name>
        <servlet-class>com.tsystems.javaschool.uberbahn.webmain.controllers.TrainTimetableSearchControllerImpl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TrainTimetableSearchController</servlet-name>
        <url-pattern>/trainTimetableSearch</url-pattern>
    </servlet-mapping>
